{% extends 'base.back.html.twig' %}

{% block title %}Category index{% endblock %}

{% block main %}
    <h1 style="margin-top: 1cm">Category index</h1>

    <table class="table" style="margin-top: 5cm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.Type }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        <tr>
            <td>    <a href="{{ path('category_new') }}">Create new</a>
            </td>
        </tr>
    </table>

{% endblock %}
