{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}


{{ form_start(form) }}
<div class="my-custom-class-for-errors">
    {{ form_errors(form) }}
</div>
<div class="col-lg-12">
    {{ form_row(form.name) }}
<button class="btn">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}