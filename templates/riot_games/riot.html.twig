{% extends 'base.html.twig' %}
{% block title %}Riot index{% endblock %}
{% block body %}
<style>
    .container{
        justify-content: center;
        display: flex;
        flex-wrap: wrap;
    }
</style>
    <div class="container text-center pt-3">






    <div class="card" style="width: 18rem;">
         <img src="/images/{{ icon}}.png" alt="wtf">
        <div class="card-body">
            <h1 style="font-size: 40px" class="text-success">{{ name }}</h1>
            <h2 class="text-success" style="font-size: 30px">level:{{ level }}</h2>
            <div class="container text-center">
                {% if  tier=="BRONZE"%}
                    <img src="/images/bronze.png" alt="wtf" width="100" height="100">
{% elseif tier=="GOLD" %}
    <img src="/images/gold.png" alt="wtf" width="100" height="100">
{% elseif tier=="SILVER" %}
    <img src="/images/silver.png" alt="wtf" width="100" height="100">

                {% endif %}

               <h2 class="text-danger pt-5" style="font-size: 20px">rank:{{ rank }}</h2>
            </div>


        </div>
    </div>
        <div id="piechart"></div>

    </div>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script type="text/javascript">
        // Load google charts
        google.charts.load('current', {'packages':['corechart']});
        google.charts.setOnLoadCallback(drawChart);

        // Draw the chart and set the chart values
        function drawChart() {
            var data = google.visualization.arrayToDataTable([
                ['Task', 'Hours per Day'],

                ['win', {{ wins }}],
                ['losses', {{ losses }}]
            ]);

            // Optional; add a title and set the width and height of the chart
            var options = {'title':'win/losses', 'width':550, 'height':500};

            // Display the chart inside the <div> element with id="piechart"
            var chart = new google.visualization.PieChart(document.getElementById('piechart'));
            chart.draw(data, options);
        }
    </script>
{% endblock %}
