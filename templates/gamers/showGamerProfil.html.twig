{% extends 'base.html.twig' %}

{% block title %}Gamers{% endblock %}

{% block body %}
<div class="container text-left">
    <h1>Gamers</h1>

    <table class="table">
        <tbody>
            <tr>
            <th>Photo de profil</th>
            <td><img src="/uploads/{{ gamer.playerphoto }}" alt="{{ gamer.playerphoto }}" width="100" height="100"></td>
        </tr>
            <tr>
                <th>Name</th>
                <td>{{ gamer.name }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ gamer.age }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gamer.description }}</td>
            </tr>
        </tbody>
    </table>

    
    <a href="{{ path('gamers_list') }}" class="btn btn-primary" ">back to list</a>


    

    </div>
{% endblock %}
