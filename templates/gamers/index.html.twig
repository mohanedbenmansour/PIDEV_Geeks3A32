{% extends 'base.back.html.twig' %}

{% block title %}Gamers index{% endblock %}

{% block body %}
    <h1>Gamers index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gamer in gamers %}
            <tr>
                <td>{{ gamer.id }}</td>
                <td>{{ gamer.name }}</td>
                <td>{{ gamer.age }}</td>
                <td>{{ gamer.description }}</td>
                <td>
                    <a href="{{ path('gamers_show', {'id': gamer.id}) }}">show</a>
                    <a href="{{ path('gamers_edit', {'id': gamer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('gamers_new') }}">Create new</a>
{% endblock %}
