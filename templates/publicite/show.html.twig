{% extends 'base.back.html.twig' %}

{% block title %}Publicite{% endblock %}

{% block main %}
    <h1>Publicite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ publicite.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ publicite.content }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ publicite.dateDebut ? publicite.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ publicite.dateFin ? publicite.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="/uploads/{{ publicite.image }}" alt="{{ publicite.image }}" width="150" height="150"></td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ publicite.etat ? 'Active' : 'Inactive' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('publicite_index') }}">back to list</a>

    <a href="{{ path('publicite_edit', {'id': publicite.id}) }}">edit</a>

    {{ include('publicite/_delete_form.html.twig') }}
{% endblock %}
