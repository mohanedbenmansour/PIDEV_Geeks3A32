{% block title %}Geeks{% endblock %}

{% block body %}
<div class="wrapper">
    <main>
        <div class="main-section">
            <div class="container">
                <div class="main-section-data">
                    <div class="row">
                        <div class="col-lg-3 col-md-4 pd-left-none no-pd">
                            <div class="main-left-sidebar no-margin">
                                <div class="user-data full-width">
                                    <div class="user-profile">
                                        <div class="username-dt">
                                            <div class="usr-pic">

                                                <img src="/uploads/{{ app.user.image }}" alt="{{ app.user.image }}" width="100" height="100">

                                            </div>
                                        </div>
                                        <div class="user-specs">
                                            <h3>{{ app.user.username }}</h3>
                                            <span>Graphic Designer at Self Employed</span>
                                        </div>
                                    </div>
                                    <ul class="user-fw-status">
                                        <li>
                                            <h4>Following</h4>
                                            <span>34</span>
                                        </li>
                                        <li>
                                            <h4>Followers</h4>
                                            <span>155</span>
                                        </li>
                                        <li>
                                            <a href="{{ path('profil', {'id': app.user.id}) }}">View Profil</a>
                                        </li>
                                    </ul>
                                </div>


                            </div>
                        </div>
                        <div class="col-lg-6 col-md-8 no-pd">
                            <div class="post-bar ">
                                <div class="post_topbar">
                                    <div class="usy-dt">
                                        <img src="/uploads/{{ post.idUser.image }}" alt="{{ post.idUser.image }}" width="50px">
                                        <div class="usy-name">
                                            <h3>{{ post.idUser.nom }}</h3>
                                            <div class="epi-sec epi2">
                                                <ul class="descp review-lt">
                                                    <li><img src="images/icon8.png" alt=""><span>{{ post.date|date }}</span></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="job_descp mngdetl">
                                    <div class="reviewtext">
                                         <p>{{ post.contenu }}</p>
                                        <hr>
                                    </div>
                                    {% for c in comments %}
                                    <div class="post_topbar post-reply">
                                        <div class="usy-dt">
                                            <img src="/uploads/{{ c.idUser.image }}" alt="{{ c.idUser.image }}" width="50px">
                                            <div class="usy-name">
                                                <h3>{{ c.idUser.nom }}</h3>
                                                {% if c.idUser.id == app.user.id %}
                                                <ul class="bk-links">
                                                    <li>
                                                        <a href="{{ path('comment_edit', {'id': c.id,'idp':post.id}) }}" title=""
                                                        ><i class="la la-pencil"></i
                                                            ></a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('comment_delete', {'id': c.id,'idp':post.id}) }}" title=""
                                                        ><i class="la la-remove"></i
                                                            ></a>
                                                    </li>
                                                </ul>
                                                {% endif %}
                                                <div class="epi-sec epi2">
                                                    <p><i class="la la-clock-o"></i>{{ c.date|date }}</p>
                                                    <p class="tahnks">{{ c.contenue }}</p><br><br>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {% endfor %}
                                    <div class="post_topbar rep-post rep-thanks">
                                        <hr>
                                        <div class="usy-dt">
                                            <img src="{{ asset('front/images/resources/bg-img4.png') }}" alt="">
                                            {{ form_start(form) }}
                                            {{ form_widget(form.contenue , {'attr': {'class': 'reply' , 'placeholder' : 'Comment'}} ) }}
                                            <button class="replybtn" type="submit">Send</button>
                                            {{ form_end(form) }}

                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
