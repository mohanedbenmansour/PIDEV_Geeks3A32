{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}


{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="">
        <div class="col-lg-12">
            {{ form_row(form.name) }}
        </div>
        <div class="col-lg-12">
            {{ form_row(form.description) }}
        </div>
        <div class="col-lg-12">
            {{ form_row(form.lieu) }}
        </div>
        <div class="col-lg-12" style="">
            {{ form_row(form.dateEvent) }}
        </div>
        <div class="col-lg-12">
            {{ form_row(form.prix) }}
        </div>
        <div class="col-lg-12">
            {{ form_row(form.img) }}
        </div>
        <div class="col-lg-12">
            {{ form_row(form.url) }}
        </div>
        <button class="btn">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}