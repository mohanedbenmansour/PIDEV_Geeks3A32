{% extends 'base.back.html.twig' %}

{% block title %}Tournoi{% endblock %}

{% block main %}


    <h1>Tournoi</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tournoi.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ tournoi.Nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tournoi.description }}</td>
            </tr>
            <tr>
                <th>Nombre de Participants</th>
                <td>{{ tournoi.Nbmax }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ tournoi.adresse }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="/uploads/{{ tournoi.image }}" alt="{{ tournoi.image }}" width="100" height="100"></td>
            </tr>
            <tr>
                <th>Date_tournoi</th>
                <td>{{ tournoi.dateTournoi ? tournoi.dateTournoi|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_publication</th>
                <td>{{ tournoi.datePublication ? tournoi.datePublication|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lien media</th>
                <td>{{ tournoi.LienYoutube }}</td>
            </tr>
            <tr>
                <th>Active/desactive</th>
                <td>{{ tournoi.active }}</td>
            </tr>
        </tbody>


        <td>
            {% if ( tournoi.active ==1) %}
            <a href="{{ path('desactiver', {'id': tournoi.id}) }}">Desactiver</a>
            {% else %}
            <a href="{{ path('desactiver', {'id': tournoi.id}) }}">Activer</a>
            {% endif %}

        </td>
        <td>
            <a href="{{ path('tournoi_edit', {'id': tournoi.id}) }}">edit</a>
        </td>

    </table>
    <a href="{{ path('tournoi_indexback') }}">back to list</a>
{% endblock %}
