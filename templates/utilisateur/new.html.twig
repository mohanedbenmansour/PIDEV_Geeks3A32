{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    <fieldset>
        
        {{ form_start(form, {'attr': {'id': 'new_edit_utilisateur'}}) }}
        {# utilisation de classes bootstrap pour la mise en forme #}
        <div class="row">
            <div class="col-lg-12 no-pdd">
                <label>nickname</label>
                </br>
                {{ form_widget(form.username) }}
                {{ form_errors(form.username) }}
            </div>
            <div class="col-lg-12 no-pdd">
                <label>First name</label>
                </br>
                {{ form_widget(form.prenom) }}
                {{ form_errors(form.prenom) }}
            </div>
            <div class="col-lg-12 no-pdd">
                <label>Last name</label>
                </br>
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}
            </div>
            
            <div class="col-lg-12 no-pdd">
                <label>Email</label>
                </br>
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="col-lg-12 no-pdd">
                <label>Phone number</label>
                </br>
                {{ form_widget(form.phoneNumber) }}
                {{ form_errors(form.phoneNumber) }}
            </div>
            <div class="col-lg-12 no-pdd">
                <label>Password</label>
                </br>
                {{ form_widget(form.password) }}
            </div>
            <div class="col-lg-12 no-pdd">
                <label for="verifpass">Confirm your password</label>
                </br>
                <input type="password" id="verifpass" required>
            </div>
            <div class="col-lg-12 no-pdd">
                <label>Facebook profil</label>
                </br>
                {{ form_widget(form.facebookprofil) }}
                {{ form_errors(form.facebookprofil) }}
            </div>
            <div class="col-lg-12 no-pdd">
                <label>Twitch Channel</label>
                </br>
                {{ form_widget(form.twitchProfil) }}
                {{ form_errors(form.twitchProfil) }}
            </div>
            <div class="col-lg-12 no-pdd">
                <label>Youtube channel</label>
                </br>
                {{ form_widget(form.youtubeChannel) }}
                {{ form_errors(form.youtubeChannel) }}
            </div>
            <button class="btn btn-success">{{ button_label|default('S\'enregistrer') }}</button>
        </div>
        
        {{ form_end(form) }}
    </fieldset>

    
{% endblock %}